<div class="contactPage_title">User Input Form</div>
  <div class="form_wrapper">
    <%= form_for(@user) do |f| %>
      <fieldset>
        <legend>Personal Particular</legend>
        <div class="contactForm_tr">
        <% if @user.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

            <ul>
            <% @user.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

        <div class="contactForm_td1">Name</div>
        <div class="contactForm_tdMiddle">: </div>
        <div class="contactForm_td2"><%= f.text_field :name, :class => "Personal-input", :id => "contactPerson"%></div>
        </br>
        </br>
        <div class="contactForm_td1">Email</div>
        <div class="contactForm_tdMiddle">: </div>
        <div class="contactForm_td2"><%= f.text_field :email, :class => "Personal-input", :maxlength => "30" %></div>
      </fieldset>
      <fieldset>
        <legend>What do you about this Page :</legend>
        <div class="massage-box">
          <div class="field">
           <%= f.text_area :desc, :cols => "30", :rows => "5", :class => "massage-textFild", :placeholder => 'Enter your instruction here...' %>
          </div>
        </div>
      </fieldset>
      
      <div class="form-button" style="margin-left:100px; margin-right:10px;">
        <%= image_submit_tag("submit_btn.png") %>
      </div>
      <div class="form-button">
        <%= link_to image_tag("clear_btn.png", :border => 0), {:action => 'new', :controller => 'users'}, :class => 'clear_btn'%>
      </div>
    <% end %>
  </div>

  <div class="reachus_wrapper"> 
    <div class="reach_icon">
      <%= link_to image_tag('reach_icon.png'), "#" %>
    </div>
    <div class="reach_txt">
      <div class="reachusTitle"> REACH US AT: </div>
